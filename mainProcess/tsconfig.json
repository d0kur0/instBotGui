{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "../.dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["../node_modules/*"]
    }
  },
  "include": ["./src/**/*"]
}
